{% extends 'CasinoBlackjackBundle::layout.html.twig' %}

{% block body %}
    <header id="banner" class="{{ result }}">
        <h1>{{ player.name }}</h1>
        <p class="wallet"><i class="icon-moneybag"></i> {{ player.wallet }}</p>
        <p class="wallet"><i class="icon-coins"></i> {{ game.score }}</p>
        <p class="wallet">Bet : {{ round.bet }}</p>
        <p class="message">{{ message }}</p>
        <a href="{{ path('get_blackjack_homepage') }}"><i class="icon-flag-checkered"></i> Finish Game</a>
        {% if (player.wallet >= 10) %}
            <a href="{{ path('blackjack_start_round') }}"><i class="icon-chevron-right"></i> Next Round</a>
        {% endif %}
    </header>
    
    <section class="players">
        <h2>Player</h2>
        {% for playerCard in playerRevealed %}
            <img class="card" src="{{ asset('bundles/casinoblackjack/images/cards/' ~ playerCard.name ~ '.png') }}" alt="{{ playerCard.name }}">
        {% endfor %}
    </section>
    <section class="players">
        <h2>Dealer</h2>
        {% for dealerCard in dealerRevealed %}
            <img class="card" src="{{ asset('bundles/casinoblackjack/images/cards/' ~ dealerCard.name ~ '.png') }}" alt="{{ dealerCard.name }}">
        {% endfor %}
    </section>
{% endblock %}